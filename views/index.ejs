<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog Share Form</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #6c63ff, #00d4ff);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .card {
      border: none;
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }
    .form-control {
      border-radius: 10px;
      border: 1px solid #ddd;
      padding: 12px 15px;
    }
    .btn-primary {
      border-radius: 10px;
      background: linear-gradient(135deg, #6c63ff, #00d4ff);
      border: none;
      transition: all 0.3s ease;
    }
    .btn-primary:hover {
      background: linear-gradient(135deg, #00d4ff, #6c63ff);
    }
    .card-header {
      border-top-left-radius: 15px;
      border-top-right-radius: 15px;
      background: linear-gradient(135deg, #6c63ff, #00d4ff);
      color: white;
      text-align: center;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="card col-md-12 mx-auto">
      <div class="card-header py-4">
        <h3 class="mb-0">Share a New Blog Post</h3>
        <p class="mb-0 small">Create and share your story!</p>
      </div>
      <div class="card-body p-4">
        <form action="#" method="POST" enctype="multipart/form-data">
          <!-- Blog Title -->
          <div class="mb-3">
            <label for="title" class="form-label">Blog Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Enter your blog title" required>
          </div>
          <!-- Blog Category -->
          <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select class="form-control" id="category" name="category" required>
              <option value="" disabled selected>Select a category</option>
              <option value="technology">Technology</option>
              <option value="lifestyle">Lifestyle</option>
              <option value="travel">Travel</option>
              <option value="education">Education</option>
              <option value="health">Health</option>
            </select>
          </div>
          <!-- Blog Content -->
          <div class="mb-3">
            <label for="content" class="form-label">Blog Content</label>
            <textarea class="form-control" id="content" name="content" rows="8" placeholder="Write your blog content here..." required></textarea>
          </div>
          <!-- Cover Image -->

          <!-- Submit Button -->
          <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">Publish Blog</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="//cdn.ckeditor.com/4.22.1/full/ckeditor.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
        // Tüm <textarea> öğelerini bul
        var textareas = document.querySelectorAll('textarea');

        // Her bir <textarea> için CKEditor'u başlat
        textareas.forEach(function (textarea) {
            CKEDITOR.replace(textarea, {
                filebrowserUploadUrl: '/upload',
                filebrowserBrowseUrl: '/uploads'
            });
        });
    });
</script>
</body>
</html>
